/* pages/orderDesc/orderDesc.wxss */
page {
  width: 100%;
  height: 100%;
}
.shareMask {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 999;
  overflow: hidden;
}
.saveShare {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 160rpx;
  line-height: 80rpx;
  /* z-index: 1100; */
}
.saveShare>view:last-child {
  border-top: 1rpx solid #eee;

}
video,
.mask {
  position: relative;
  width: 100%;
  height: 400rpx;
  background-color: #f4f4f4;
}
canvas {
  position: fixed;
  top: 45%;
  width: 260px;
  height: 400px;
  left: 50%;
  transform: translate(-50%,-50%);
  background-color: #fff;
  z-index: 1000;
}
.fixed {
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 998;
  /* height: 225px; */
  background-color: #f4f4f4;
} 
.mask image {
  width: 100%;
  height: 400rpx;
}
.mask .need-pay-part{
  position: absolute;
  z-index:10;
  width:600rpx;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
  white-space: no-wrap;
  color:#fff;
  text-align: center;
}
.mask .need-pay-part .text{
  margin-bottom:20rpx;
  font-size:28rpx;
  line-height:40rpx;
}
.mask .playing-text{
  position:absolute;
  left:20rpx;
  bottom:20rpx;
  max-width:400rpx;
  font-size:24rpx;
  line-height:34rpx;
  color:#fff;
}
.mask .playing-text .pay-text{
  padding:0 12rpx;
}
.refresh-part{
  margin-right:20rpx;
}
.refresh-part .icon{
  margin-right:8rpx;
}
.mask .watch-num{
  position: absolute;
  right:20rpx;
  bottom:20rpx;
  font-size:22rpx;
  line-height:32rpx;
  color:#fff;
}
