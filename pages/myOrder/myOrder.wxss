.order-lis{
	margin-bottom: 30rpx;
	padding: 30rpx 0rpx;
  background-color: #fff;
	/* border-bottom: 20rpx solid #f5f5f5; */
}
.order-li-none{
	height: 400rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	color:#aaa;
}
.order-lis:last-child{
	margin-bottom: 40rpx;
	border-bottom: none;
}
.order-li{
	overflow: hidden;
}
.li-top{
	padding: 0 45rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 26rpx;
}
/* .li-top >text{
	padding: 4rpx 12rpx;
	border-radius: 10rpx;
	background: #f7f7f7;
} */
.li-top > navigator {
  display: inline-block;
}
.li-top > .status {
  color: #00BCD4;
}
.li-top > button{
	margin: 0;
	padding: 0;
	width: 39rpx;
	height: 40rpx;
	background-color: transparent;
}
.li-top > button > image{
	width: 39rpx;
	height: 40rpx;
}
.li-bottom{
	margin-top:20rpx;
	padding: 12rpx 45rpx;
	display: flex;
	align-items: center;
	background: #fff;
	border-radius: 10rpx;
}
.li-bottom image{
  width: 100%;
	height: 360rpx;
	border-radius: 30rpx;
  background-color: #f8f8f8;
}
.shop-detail{
	margin-left: 20rpx;
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	flex-direction: column;
}
.shop-title{
	display: block;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.shop-title{
	font-size: 28rpx;
}
.shop-rule{
	margin-top: 20rpx;
  padding-left: 120rpx;
  text-indent: -124rpx;
	font-size: 28rpx;
	color: #000;
  box-sizing: border-box;
}
.prodesc {
  /* display: inline-block; */
  /* text-indent: 2em; */

}
.shop-price{
	margin-top: 20rpx;
	font-size: 20rpx;
	display: flex;
	align-items: center;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.shop-price > text:nth-child(2){
	font-size: 26rpx;
	color: #f82637;
}
.price-total,
.pay {
	margin: 20rpx 0;
	/* width: 380rpx; */
	text-align: right;
}
.price-total > amount{
	color: #f82637;
	font-size: 30rpx;
}
.pay > text{
  padding: 10rpx 30rpx;
  background-color: #00BCD4;
  color: #fff;
  border-radius: 30rpx;
  margin-bottom: 30rpx;
}
.pay.status >text{
  background-color: #fff;
  border: 1rpx solid #00BCD4;
  color: #00BCD4;
}
.detail {
  width: 208rpx;
  background-color: #fff;
  border: 1rpx solid #818181;
  color: #818181;
}
.finish {
  width: 208rpx;
  background-color: #fff;
  border: 1rpx solid #00BCD4;
  color: #00BCD4;
}
.confirm{
	margin: 20rpx 0 0;
	/* padding: 0 46rpx; */
	display: flex;
	justify-content: flex-end;
	
}
.confirm > button{
	margin-left: 20rpx;
	margin-right: 0;
	width: 130rpx;
	height: 50rpx;
	line-height: 50rpx;
	text-align: center;
	border-radius: 25rpx;
	border: 1rpx solid #00BCD4;
	color: #00BCD4;
	background: #fff;
}
.confirm .detail {
  /* width: 208rpx; */
  background-color: #fff;
  border: 1rpx solid #818181;
  color: #818181;
}
.confirm .finish {
  /* width: 208rpx; */
  background-color: #fff;
  border: 1rpx solid #00BCD4;
  color: #00BCD4;
}
.money {
  color: #000;
  font-size: 32rpx;
}
.price-total {
  display: flex;
  justify-content: space-between;
}
.shopname {
  color: #00BCD4;
}
.status button {
  margin-left: 18rpx;
}