.live-page{
  position:relative;
  width:100%;
  height:100vh;
  background:rgba(0,0,0,.6);
}
.top-handle{
  position: absolute;
  top:20rpx;
  height:80rpx;
  left:0;
  right:0;
}
.top-handle .info-item{
  position: absolute;
  left:20rpx;
  top:0;
  padding:10rpx;
  display:flex;
  align-items: center;
  color:#fff;
  background:rgba(0,0,0,.5);
  border-radius: 46rpx;
}
.top-handle .info-item .avatar{
  width:68rpx;
  height:68rpx;
  border-radius: 50%;
}
.top-handle .info-item .count{
  margin:0 40rpx;
}
.info-item .count .time{
  font-size:26rpx;
}
.info-item .count .support{
  font-size:20rpx;
}
.top-handle .info-item .add{
  position: relative;
  width:48rpx;
  height:48rpx;
  background:#00BCD4;
  border-radius: 50%;
}
.top-handle .info-item .add:before{
  content:'';
  display: block;
  position: absolute;
  left:13rpx;
  top:22rpx;
  width:22rpx;
  height:4rpx;
  background: #fff;
}
.top-handle .info-item .add:after{
  content:'';
  display: block;
  position: absolute;
  left:22rpx;
  top:13rpx;
  width:4rpx;
  height:22rpx;
  background: #fff;
}
.top-handle .handle-item{
  position: absolute;
  right:20rpx;
  top:14rpx;
}
.top-handle .handle-item .handle-img{
  width:60rpx;
  height:60rpx;
}
.bottom-handle{
  position:absolute;
  bottom:20rpx;
  left:0;
  right:0;
  display:flex;
  justify-content: space-around;
}
.bottom-handle .handle-item{
  flex:1;
  text-align: center;
}
.bottom-handle .handle-item .handle-img{
  width:84rpx;
  height:84rpx;
}