/* pages/userDetail/detail.wxss */
page {
  width: 100%;
  height: 100%;
}
.fixed {
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 998;
  background-color: #f4f4f4;
} 
.user-part {
  position: relative;
  width: 100%;
  color:#fff;
}

.user-part .user-bg {
  width: 100%;
  height: 360rpx !important;
}
.user-part .user-info{
  position:absolute;
  bottom:20rpx;
  left:20rpx;
}
.user-info .name{
  font-size:48rpx;
  line-height:66rpx;
  font-weight: bold;
}
.user-info .intro{
  font-size:24rpx;
  line-height:34rpx;
}
.bio-img{
  width:100%;
}
.bottom {
  text-align: center;
  color: #bbb;
  padding: 30rpx;
}

