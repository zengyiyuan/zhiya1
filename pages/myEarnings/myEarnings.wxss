/* pages/myEarnings/myEarnings.wxss */
.fixed{

}
.bottom{
  text-align:center;
  color:#bbb;
  padding:30rpx;

}
.header{
  position:relative;
}
.header-bg{
  width:100%;
  height:160rpx;
}
.header-info{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  padding:40rpx; 
  color:#fff;
}
.header-info .info-menu{
  display: flex;
  align-items: center;
}
.header-info .info-item{
  margin:0 20rpx;
  text-align: left;
  flex:1;
  font-size:30rpx;
  line-height:40rpx;
}
.header-info .info-item .count{
  margin-left:10rpx;
}
.list{
  padding:40rpx 20rpx;
  background: #fff;
}
.child-item{
  margin-bottom:20rpx;
  display:flex;
  height:200rpx;
  background: #fff;
}
.child-item .image{
  flex:1;
  position:relative;
  height:200rpx;
}
.child-item .image .needPay{
  position:absolute;
  z-index:1;
  right:20rpx;
  top:0;
  padding:0 10rpx;
  font-size:24rpx;
  line-height:36rpx;
  color:#fff;
  background:#eab94a;
  border-radius: 0 0 12rpx 12rpx;
}
.child-item .image image{
  width:100%;
  height:200rpx;
  border-radius: 10rpx;
}
.child-item .info{
  flex:1;
  padding:10rpx 20rpx;
}
.child-item .title{
  font-size:34rpx;
  height:96rpx;
  line-height:48rpx;
  color:#333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.child-item .price{
  font-size:24rpx;
  line-height:40rpx;
  color:#FFA022;
}
.child-item .num{
  font-size:24rpx;
  line-height:40rpx;
  color:#00BCD4;
}
.time-part{
  margin-bottom:50rpx;
}
.time-item{
  display:flex;
  padding:20rpx;
  justify-content: space-between;
  font-size:32rpx;
  line-height:44rpx;
  background:#fff;
}
.time-item .icon{
  margin-left:12rpx;
}
.pick-mask{
  position: fixed;
  z-index:10;
  top:0;
  left:0;
  right:0;
  bottom:0;
  background:rgba(0,0,0,.4);
}
.pick-body{
  position:absolute;
  bottom:0;
  width:100%;
  text-align: center;
  background:#fff;
}
.pick-confirm{
  display: flex;
  padding:0 20rpx;
  justify-content: space-between;
  font-size:32rpx;
  line-height:60rpx;
}
.pick-confirm text{
  padding:12rpx 20rpx;
}
.pick-part{
  height:200rpx;
}