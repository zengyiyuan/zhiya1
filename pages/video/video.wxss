/* 热门视频 */
.hot {
  /* margin-top: 120rpx; */
  background-color: #fff;
}
.face {
 padding-top: 28rpx;
}
.hot .title {
    padding: 30rpx;
    position: relative;
}
.hot .title text {
    font-size: 18px;
    color: #333;
    font-weight: 700;
}
.hot .title .icon {
    position: absolute;
    right: 30rpx;
    color: #ddd;
    margin-top: 10rpx;
}
.cu-card.case .image .cu-tag {
position:absolute;
right:20rpx;
top:0;
}
.cu-card.case .image .cu-bar {
position:absolute;
bottom:0;
right: 0;
text-align: right;
background-color:transparent;
word-wrap:normal;
text-overflow:ellipsis;
white-space:nowrap;
}
.hot .image .cu-bar text {
  position:absolute;
  bottom:10rpx;
  right: 20rpx;
  text-align: right;
}
.hot .cu-list.menu-avatar>.cu-item {
padding-left:0rpx;
/* height:110rpx; */
color: #000;
}
.hot .text-grey, .line-grey, .lines-grey {
  color:#000;

}

.hot .text-gray, .line-gray, .lines-gray {
color:#8799a3;
}
.hot .image {
  border-radius: 20rpx;
  overflow: hidden;
}
.hot .cu-card>.cu-item {
  margin: 0rpx 30rpx;
  border-radius: 10rpx;

}
.bottom {
  text-align: center;
  color: #bbb;
  padding: 30rpx;
}

.form-btn {
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 98rpx;
}

.btn-reset {
  flex: 1;
  background-color: #fff;
  color: #00BCD4;
  border-top: 1rpx solid #efefef;
  border-bottom: 1rpx solid #efefef;
  border-radius: 0;
}

.btn-submit {
  flex: 1;
  background-color: #00BCD4;
  color: #fff;
  border-radius: 0;
}
.face .cu-card.case {
  margin: 0 30rpx;
}
.face .cu-card.case>.cu-item {
  margin: 0;
}
.face .cu-card>.cu-item:nth-of-type(2n+1) {
  padding-right: 10rpx;
}
.face .cu-card>.cu-item:nth-of-type(2n) {
  padding-left: 10rpx;
}
.face {
  margin-bottom:160rpx; 
}
.face .image {
  height: 194rpx;
}
.face image {
  height: 194rpx;
}
.facetitle ,
.facewriter {
   overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  white-space:nowrap;
  /* height: 500rpx; */
}
